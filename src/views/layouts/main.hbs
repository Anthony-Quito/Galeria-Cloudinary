    <!-- Initialize Swiper -->
    <script type="module">
        console.log('Hola mundo')
        const swiper = new Swiper('.swiper', {
            effect: "coverflow",
            grabCursor: true,
            centeredSlides: true,
            slidesPerView: "auto",
